@model WeHeMo.DTO.DTO_CUSTOMER
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="container">
    @using (Html.BeginForm("Login", "Customer", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.Label("Kullanıcı Adı", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email.." ,type = "email"})
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Şifre", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-info">Giris Yap</button>
                @*<a href="@Url.Action("Recovery","Account")" class="btn btn-warning">Şifremi Unuttum</a>*@
            </div>
        </div>
    }
</div>