@model WeHeMo.DTO.DTO_CUSTOMER
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

<div class="container">
    @using (Html.BeginForm("Register", "Customer", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.Label("Kullanıcı Adı", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Kullanıcı Adı.." })
            </div>
        </div>
           <div class="form-group">
            @Html.Label("Email", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", type = "email" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Şifre", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "password" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-info">Kayıt Ol</button>                
            </div>
        </div>
    }
</div>