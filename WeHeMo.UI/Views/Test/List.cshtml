@model List<WeHeMo.DTO.DTO_TEST>
@{
    ViewBag.Title = "List";
}

<h2>List</h2>

<div class="row">
    <div class="col-lg-7 col-md-7">
        <div class="panel panel-danger">
            <div class="panel-heading">
                Test Listeleme Sayfası
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Url</th>
                                <th>TestDate</th>
                                <th>Status</th>
                                <th>Report</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int sayac = 0;
                                foreach (var item in Model)
                                {
                                    sayac++;
                                    <tr>
                                        <td>@sayac</td>
                                        <td>@item.Url</td>
                                        <td>@item.Date</td>
                                        <td>@item.Status</td>
                                        @*<td>
                                            <button type="button" class="btn btn-default btn-lg">
                                                <span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span>
                                            </button>
                                        </td>*@
                                        <td>
                                            <a href='@Url.Action("Report", "Test", new {id=item.ID })' class="btn btn-default btn-lg" role="button"><span class="glyphicon glyphicon-folder-open" aria-hidden="true"></span></a>
                                        </td>
                                        <td><a href="@Url.Action("Delete", "Test", new {id=item.ID })" class="btn btn-default btn-lg" role="button"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a></td>
                                        @*<td>
                                            <a href="@Url.Action("Delete", "Test", new {id=item.ID })" class="btn btn-default btn-lg" role="button"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                                        </td>*@
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
